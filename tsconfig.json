{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node", "vitest/globals"]
	},
	"exclude": [
		"node_modules",
		"dist",
		"src/**/__tests__",
		"src/**/*.test.ts",
		"src/**/*.spec.ts"
	],
	"include": [
		"src/**/*.ts"
	]
}
